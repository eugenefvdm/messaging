<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.snowball"
    android:versionCode="1"
    android:versionName="1.0" >

    <!-- GCM requires Android SDK version 2.2 (API level 8) or above. -->
    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <!-- OpenGL ES version 2 used by Google Maps API -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <!-- GCM and Google Maps connects to Internet Services -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- GCM requires a Google account. -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- Keeps the processor from sleeping when a message is received. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Creates a custom permission so only this application can receive its messages. -->
    <permission
        android:name="com.snowball.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.snowball.permission.C2D_MESSAGE" />

    <!-- This application has permission to register and receive data message. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <!-- Got an exception to add this after adding Google Maps -->
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <!-- Network State Permissions to detect Internet status used by GCM and Google Maps -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Used by Google Maps API -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Optionally used by Google Maps API -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Optionally used by Google Maps API -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Permission to vibrate -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Permission to read phone state used for obtaining device ID IMEI or MEID -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- Main activity. -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/snowball_launcher_72px"
        android:label="@string/app_name" >

        <!-- Register Activity -->
        <activity
            android:name="com.snowball._backup.RegisterActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- Main Activity -->
        <activity
            android:name="com.snowball.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.snowball.TaskListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.snowball.JobDetailActivity" >
        </activity>
        <activity android:name="com.snowball.PrefsActivity" >
        </activity>
        <activity android:name=".MapPane" >
        </activity>

        <provider
            android:name="com.snowball.db.JobContentProvider"
            android:authorities="com.snowball"
            android:exported="false" >
        </provider>

        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>

                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Receives the registration id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.snowball" />
            </intent-filter>
        </receiver>

        <service android:name="com.snowball.GCMIntentService" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCGHZ5I2gmw-J3qxlZNMoHywm9adR8Y2lk" />
    </application>

    <!-- Global App used for preferences -->
    <application
        android:name="App"
        android:allowBackup="true"
        android:icon="@drawable/snowball_launcher_72px"
        android:label="@string/app_name"
    >
    </application>

</manifest>